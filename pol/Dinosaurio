//YWROBOT
//Compatible with the Arduino IDE 1.0
//Library version:1.1
#include <Wire.h> 
#include <LiquidCrystal_I2C.h>
int a = 2;
int i = 16;
int Boton = 0 ;
int BotonAnterior = 0;
int PinBoton = 2;
LiquidCrystal_I2C lcd(0x27,16,4);  // set the LCD address to 0x27 for a 16 chars and 2 line display

void setup()
{
  lcd.init();                      // initialize the lcd 
  lcd.init();
  Serial.begin(9600);
  pinMode(PinBoton, INPUT_PULLUP);
  // Print a message to the LCD.
 
 
}


void loop()
{
  Boton = digitalRead(3);
 
   if ((Boton == LOW )&&(BotonAnterior == HIGH)){
    a = 3;
    BotonAnterior = Boton;
   }else{
    a = 0;
    
    BotonAnterior = Boton;
   }
  lcd.backlight();
  for( i=16;i>0;i--){
    lcd.setCursor(i,2);
  lcd.print("C");
  delay(200);
  lcd.clear();
  
  }
  if(i==16){
    i=0;
  }
  lcd.setCursor(0, 1);
  lcd.print("D");
  Serial.println(i);
  }
  
