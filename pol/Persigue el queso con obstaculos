#include <FastLED.h>
#define NUM_LEDS 120
#define DATA_PIN 8
CRGB leds[NUM_LEDS];
int queso = random(3,NUM_LEDS);
int ledActual = 1; //led central
int obstaculo[4]= {34,10,70,55};
int puntos = 0;
int estadoEjeY= analogRead(A0);
int estadoBoton= digitalRead(13);
bool estadoBotonAnterior= LOW;
long tiempoMaximo = 120000;
long tiempoActual = 0;

void revisarSensores(){
 
  Serial.println("En revisarSensores");
  estadoBoton= digitalRead(13);
  estadoEjeY=analogRead(A0);
   if (estadoEjeY<112) {
     if(estadoBoton==HIGH)and(estadoBotonAnterior){
      ledActual(ledActual-5);
    }else{ 
    ledActual=(ledActual-2); }
  }
 else if (estadoEjeY<412) {
   
    if(estadoBoton==HIGH)and(estadoBotonAnterior==LOW){
      ledActual(ledActual-3);
    }else{ 
      ledActual--;
    }
   
   
   }else{
  }
  else if (estadoEjeY<600){
   }
   else if (estadoEjeY<860){
   
    if(estadoBoton==HIGH)and(estadoBotonAnterior==LOW){
    ledActual=(ledActual+3);
   }else{
    ledActual++;
   }
   }else{ 

    if(estadoBoton==HIGH)and(estadoBotonAnterior=LOW){
     ledActual=(ledActual+5);
   }else{
    ledActual=(ledActual+2);
   }
   }
   
    estadoBoton=estadoBotonAnterior;

void mostrarPuntos(){
  Serial.println("en mostrar puntos");
   FastLED.clear();
  for(int b=0;b=puntos--;b++){
  leds[b] = CRGB::Yellow;
  }
  FastLED.show();  
}

void FDJ(){
Serial.println("En FDJ");
  FastLED.clear();
  for(int a=0;a=NUM_LEDS;a++){
  leds[a] = CRGB::Red;
   FastLED.show();
  }
  delay(3000);
  mostrarPuntos();
  digitalWrite(12, HIGH);
}


void logica(){
Serial.println("En logica");
  if(ledActual==queso){
    puntos++;
    queso=random(0,NUM_LEDS);
   }

  /* for(int i=0;i=3;i++){
    if(obstaculo[i]==ledActual){
      FDJ();
    }
  }*/
}

void encenderLeds(){
  Serial.println("En encenderleds");
  FastLED.clear();
  leds[ledActual] = CRGB::Purple;
  leds[ledActual +1] = CRGB::Purple;
  leds[ledActual -1] = CRGB::Purple;
  leds[queso] = CRGB::Yellow;
  leds[obstaculo[0]] = CRGB::Red;
  leds[obstaculo[1]] = CRGB::Red;
  leds[obstaculo[2]] = CRGB::Red;
  leds[obstaculo[3]] = CRGB::Red;
  FastLED.show();
}



void temporizador(){
 tiempoActual = millis();
  if ((tiempoActual-tiempoMaximo)==0){
    FDJ();
   }
}



  
void setup() {
  // put your setup code here, to run once:
  FastLED.addLeds<NEOPIXEL, DATA_PIN>(leds, NUM_LEDS);
  pinMode(13, INPUT_PULLUP);
  Serial.begin(9600);
}

void loop() {
  // put your main code here, to run repeatedly:
  Serial.println(estadoEjeY);
  revisarSensores();
  logica();
  encenderLeds();
}
